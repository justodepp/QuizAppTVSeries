<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        style="@style/linear_v"
        android:layout_marginTop="@dimen/c_htop">
        
        <android.support.v7.widget.CardView
            style="@style/CardStyle">
            <LinearLayout
                style="@style/linear_v" >

                <FrameLayout
                    style="@style/frame_layout">

                    <ImageView
                        style="@style/imageView_quizCard"
                        android:src="@drawable/dexter"
                        />
                    <TextView
                        style="@style/textView_quizCard"
                        android:text="@string/which"
                        />
                </FrameLayout>

                <RadioGroup
                    style="@style/std_layout"
                    android:layout_margin="@dimen/margin_radio">
                    <RadioButton
                        style="@style/radio_button"
                        android:text="Dottor Who"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="The Flash"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="X-men"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="Dexter"
                        />
                </RadioGroup>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardStyle"
            android:layout_marginTop="@dimen/card_margin_top">
            <LinearLayout
                style="@style/linear_v" >

                <FrameLayout
                    style="@style/frame_layout">
                    <ImageView
                        style="@style/imageView_quizCard"
                        android:src="@drawable/daredevil"/>

                    <TextView
                        style="@style/textView_quizCard"
                        android:text="@string/which"/>

                </FrameLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_margin="@dimen/margin_radio"
                    style="@style/std_layout">

                    <EditText
                        style="@style/std_layout"
                        android:hint="@string/hint_name" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardStyle"
            android:layout_marginTop="@dimen/card_margin_top">
            <LinearLayout
                style="@style/linear_v" >

                <FrameLayout
                    style="@style/frame_layout">
                    <ImageView
                        style="@style/imageView_quizCard"
                        android:src="@drawable/arrow"/>

                    <TextView
                        style="@style/textView_quizCard"
                        android:text="@string/season_number"/>

                </FrameLayout>

                <RadioGroup
                    style="@style/std_layout"
                    android:layout_margin="@dimen/margin_radio">
                    <RadioButton
                        style="@style/radio_button"
                        android:text="2"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="7"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="3"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="5"
                        />
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardStyle"
            android:layout_marginTop="@dimen/card_margin_top">
            <LinearLayout
                style="@style/linear_v">

                <FrameLayout
                    style="@style/frame_layout">
                    <ImageView
                        style="@style/imageView_quizCard"
                        android:src="@drawable/sense8"/>

                    <TextView
                        style="@style/textView_quizCard"
                        android:text="What's the name of this Tv Series?"/>

                </FrameLayout>


                <RadioGroup
                    style="@style/std_layout"
                    android:layout_margin="@dimen/margin_radio">
                    <RadioButton
                        style="@style/radio_button"
                        android:text="Supernatural"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="Sense8"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="Falling Sky"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="Vikings"
                        />
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardStyle"
            android:layout_marginTop="@dimen/card_margin_top">
            <LinearLayout
                style="@style/linear_v">

                <FrameLayout
                    style="@style/frame_layout">
                    <ImageView
                        style="@style/imageView_quizCard"
                        android:src="@drawable/better_call_saul"/>

                    <TextView
                        style="@style/textView_quizCard"
                        android:text="In wich Tv Series appear this actor?"/>

                </FrameLayout>

                <LinearLayout
                    style="@style/linear_v"
                    android:layout_margin="@dimen/card_margin_top">
                    <LinearLayout
                        style="@style/std_layout"
                        android:orientation="horizontal">
                        <CheckBox
                            style="@style/checkBox"
                            android:text="The Original"
                            />
                        <CheckBox
                            style="@style/checkBox"
                            android:text="Breaking Bad"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/std_layout"
                        android:orientation="horizontal">
                        <CheckBox
                            style="@style/checkBox"
                            android:text="Better call Saul"/>
                        <CheckBox
                            style="@style/checkBox"
                            android:text="The 100"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardStyle"
            android:layout_marginTop="@dimen/card_margin_top">
            <LinearLayout
                style="@style/linear_v">

                <FrameLayout
                    style="@style/frame_layout">
                    <ImageView
                        style="@style/imageView_quizCard"
                        android:src="@drawable/stranger_things"/>

                    <TextView
                        style="@style/textView_quizCard"
                        android:text="What's this Tv Series?"/>

                </FrameLayout>

                <RadioGroup
                    style="@style/std_layout"
                    android:layout_margin="@dimen/margin_radio">
                    <RadioButton
                        style="@style/radio_button"
                        android:text="Breaking Bad"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="Flashforward"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="The walking dead"
                        />
                    <RadioButton
                        style="@style/radio_button"
                        android:text="Stranger Things"
                        />
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardStyle"
            android:layout_marginTop="@dimen/card_margin_top">
            <LinearLayout
                style="@style/linear_v">

                <FrameLayout
                    style="@style/frame_layout">
                    <ImageView
                        style="@style/imageView_quizCard"
                        android:src="@drawable/breaking_bad"/>

                    <TextView
                        style="@style/textView_quizCard"
                        android:text="What's the name of this Tv Series?"/>

