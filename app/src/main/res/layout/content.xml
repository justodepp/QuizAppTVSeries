                    <TextView
                        style="@style/textView_quizCard"
                        android:text="In wich Tv Series appear this actor?"/>

                </FrameLayout>
                <LinearLayout
                    style="@style/linear_v"
                    android:layout_margin="@dimen/card_margin_top">
                    <LinearLayout
                        style="@style/std_layout"
                        android:orientation="horizontal">
                        <CheckBox
                            style="@style/checkBox"
                            android:text="Jessica Jones"
                            />
                        <CheckBox
                            style="@style/checkBox"
                            android:text="Luke Cage"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/std_layout"
                        android:orientation="horizontal">
                        <CheckBox
                            style="@style/checkBox"
                            android:text="Ninja Turtle"/>
