<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/std_layout"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            style="@style/txt_result1"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="@string/text_result1"/>
        <TextView
            style="@style/txt_result2"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="@string/text_result2"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_submitName"
            style="@style/btn_result"
            android:onClick="calculateResult"
            />
    </LinearLayout>
</RelativeLayout>